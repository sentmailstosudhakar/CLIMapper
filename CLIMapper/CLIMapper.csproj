<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1;net5.0;net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>CLIMapper</PackageId>
    <Version>1.0.0</Version>
    <Authors>Sudhakar</Authors>
    <Description>CLIMapper is a tool designed to parse and map command line arguments into C# types, making it easier to handle user inputs in a structured and type-safe manner.</Description>
    <PackageTags>CLIMapper; CLIParser; CommandLineArgument; CLIArgs; Arguments; CLIMapper; CommandLine; CLI; Command</PackageTags>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/sentmailstosudhakar/CLIMapper</RepositoryUrl>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>   
  </PropertyGroup>

</Project>
